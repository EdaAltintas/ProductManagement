@model IEnumerable<WebApplication1.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
<div class="container">

    <div class="row">

        @*<div class="col-lg-3">

                <h1 class="my-4">Shop Name</h1>
                <div class="list-group">
                    <a href="#" class="list-group-item">Category 1</a>
                    <a href="#" class="list-group-item">Category 2</a>
                    <a href="#" class="list-group-item">Category 3</a>
                </div>

            </div>*@
        <!-- /.col-lg-3 -->

        <div class="col-lg-auto">

            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="~/images/indirim.png"  alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/images/indirim.png" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/images/indirim.png" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <div class="row">
                @foreach (var item in Model)
                {
                    if (item.ProductDesc.Length > 23)
                    {
                        item.ProductDesc = item.ProductDesc.Substring(0, 20)+"...";
                    }
                    if (item.ProductName.Length > 13)
                    {
                        item.ProductName = item.ProductDesc.Substring(0, 10)+"...";
                    }

                    <div class="col-md-4">
                        <div class="card mb-4 text-white bg-dark" >
                            @{
                                if (!String.IsNullOrEmpty(item.Img))
                                {
                                    <img class="card-img-top " src="~/images/@item.Img" width="200" height="300"  alt="Card image cap">
                                }
                                else
                                {
                                     <img class="card-img-top" src="~/images/noimage.png"width="200" height="300" alt="Card image cap">
                                }
                            }
                            
                        <div class="card-body">
                            @{
                                if (item.Stock <= 0)
                                {
                                    <span class="badge  badge-danger badge-secondary float-right" style=" padding:5px 10px;"> TÜKENDİ</span>
                                }
                                else
                                {
                                    <span class="badge  badge-success badge-secondary float-right" style=" padding:5px 10px;">STOKTA  <span class="badge badge-danger">Son @item.Stock ürün</span> </span>
                                }
                            }
                            <br />
                            <h5 class="card-title">@item.ProductName </h5>
                            <p class="card-text">@item.ProductDesc</p>
                            <h4>@item.Price ₺</h4>
                            <a href="/Product/CustomerProductDetail/@item.Id" class="btn btn-info"><i class="fa fa-navicon">Ürünü incele</i></a>
                            <a href="#" class="btn  btn-success"><i class="fa fa-plus">Sepete Ekle</i></a>

                        </div>
                        </div>
                    </div>
                }
            </div>
            <!-- /.row -->
        </div>
        <!-- /.col-lg-9 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->
